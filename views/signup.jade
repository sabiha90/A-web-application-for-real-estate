                form.form-horizontal(role='form', method='post', action='signup', onsubmit='return checkblank(this);')
                  #signupalert.alert.alert-danger(style='display:none')
                    p Error:
                    |  
                    span
                  | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                  .form-group
                    label.col-md-3.control-label(for='first_name') First Name
                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                    .col-md-9
                      input.form-control(type='text', pattern='[A-Za-z]{1,15}', title= 'First name must be a capital letter followed by lowercase letters',  name='first_name', placeholder='Eg. Bob', required)
                  | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                  .form-group
                    label.col-md-3.control-label(for='last_name') Last Name
                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
