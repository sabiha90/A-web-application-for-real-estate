      .row
        .col-md-12
          #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style=' margin-top:150px')
            .panel.panel-info
              .panel-heading
                .panel-title Sign Up
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                div(style='float:right; font-size: 85%; position: relative; top:-10px')
