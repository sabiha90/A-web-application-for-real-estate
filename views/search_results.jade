doctype html
html
  head
    title= title
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
        link(rel="shortcut icon" href="/fa17g13/images/sfsu.jpg" type="image/jpg")
        link(rel='stylesheet', href='/fa17g13/stylesheets/login.css')

        
  body
    a(href='search') Back to search
  
    .container
  
     
    .row
    
    .col-md-4.col-md-offset-3

      form.search-form(role='form', method='post',action='search')
        .form-group.has-feedback
          label.sr-only(for='search') Search
          input#search.form-control(type='text', name='search', placeholder='Eg.94536')
          .form-group(style='margin-top:10px')

               button#btn-login.btn.btn-success(type='submit') Search  
      if (rows=="Sorry Not Found!")
           p #{rows}
      else 
        - each item in rows
         table
           tr
            td 
             ul(style='list-style-type:none;')
              li Property Type: #{item.property_type}
              li Price: $#{item.price}
              li Area in square feet: #{item.square_size} feet
              li Lot Size: #{item.lot_size}feet
              li Number of Bedrooms: #{item.number_of_bedrooms}
              li Number of Baths: #{item.no_baths}
              li House Number: #{item.house_number}
              li Zipcode: #{item.zipcode}
              li Street Name: #{item.street}
              li City: #{item.city}
              li State: #{item.state}
            td
            td
            td
              img(src='#{item.image}' style="width:200px;height:200px;border:0;align:right;") 
               
         
