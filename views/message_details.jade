    // Header
   - each item in user_details
     header
      #flipkart-navbar
        .container
          .row.row1
            ul.largenav.pull-right
              li.upper-links
                a.links(href='homepage') Home
              li.upper-links
                a.links(href="profile?id=#{item.id}"  id="id") Profile
              li.upper-links
                a.links(href="message_details?id=#{item.id}"  id="id") Messages
              li.upper-links
                a.links(href="add_details"  id="id") Add Listing
              
              li.upper-links
                a.links(href='login') Logout
              li.upper-links
                a.links(href='signup') Sign Up
              li.upper-links
                a.links(href='http://clashhacks.in/')
                  svg(width='16px', height='12px', style='overflow: visible;')
    
    .container-fluid
      .content
     #message 
      ul.nav.nav-pills.nav-stacked.col-md-2
        li.active
          a(href='#tab_a', data-toggle='pill') New Mail
      .tab-content.col-md-10
        // Send Mail Tab
        #tab_a.tab-pane.active
          .panel.panel-primary(style='width: 100%;')
            .panel-heading
              h3.panel-title New Mail
            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;   
            .panel-body
              .form-group
                table#NewMails.dashboard
                  tr.header
                    th(style='width:40%;') From
                    th(style='width:40%;') Message
                    |  
                    th(style='width:30%;') Contact Number
                    |  
                    th(style='width:20%;') Email ID
                    |  
                    th(style='width:30%;') House details 
                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
