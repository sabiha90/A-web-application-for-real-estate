 .container
    
  .row

    .col-md-6.col-md-offset-3

       p Search for properties by 
        form.search-form(role='form', method='post',action='dropdownW W',maxlength=40)
          select(name="selectpicker" id ="activity")
           option(value = 'none') Select
           option(value = 'zipcode') Zipcode
           option(value = 'city') City
           option(value = 'street') Street Name
        

  .row

    
    .col-md-4.col-md-offset-3


      

      form.search-form(role='form', method='post', action='search')
        .form-group.has-feedback
          label.sr-only(for='search') Search
          #search
          .form-group(style='margin-top:10px')

               button#btn-login.btn.btn-success(type='submit') Search 


      script.
         var sel = document.getElementById("activity");
         var tex = document.getElementById("search");
          sel.addEventListener("change", function() {
            if(sel.value == 'zipcode')
            {
               tex.innerHTML = "<input type='text' pattern= '[0-9]{5,5}' class = 'form-control' name = 'zipcode' placeholder='Eg.94536'/>";
            }
            else if(sel.value == 'city')
            {
               tex.innerHTML = "<input type='text' pattern= '[A-Za-z]{40}' class = 'form-control' name = 'city' placeholder='San Francisco'/>";
    
            }
            else 
            {
                tex.innerHTML = "<input type='text' pattern= '[A-Za-z]{40}'  class = 'form-control' name = 'street' placeholder='Euclid Ave'/>";
            }

            }); 

    
 


 

